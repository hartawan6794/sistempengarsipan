<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DashboardAdmin">


    <TextView
        android:id="@+id/tvAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:fontFamily="@font/tcm"
        android:padding="10dp"
        android:text="Hallo, "
        android:textColor="@android:color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvUserLvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdmin"
        android:fontFamily="@font/tcm"
        android:padding="10dp"
        android:text="Hallo, "
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/btnCounrArsip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdmin"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bgapp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/foldere" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTxtjmlah"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:text="Surat Umum : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJmlahArsip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:text="Surat Masuk : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJmlahSuratMasuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:text="Surat Keluar : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJmlahSuratKeluar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTxtjmlah"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tcm"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTxtjmlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tcm"
                android:text="Jumlah Arsip "
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btnCounrPengguna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCounrArsip"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bgapp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/tvJmlUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTxtJmlahK"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/tcm"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvTxtJmlahK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tcm"
                android:text="Jumlah Pengguna "
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>