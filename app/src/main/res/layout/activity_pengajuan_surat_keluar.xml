<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".Activity.PengajuanSuratKeluarActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btnCalender"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/calendar" />

                        <EditText
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/btnCalender"
                            android:fontFamily="@font/tcm"
                            android:hint="01 - Jan - 2000"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/sttsValid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:text="0"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="email"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />
                    <EditText
                        android:id="@+id/nomorDok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="Nomor"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/edInstansi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="Instansi"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/edAlamatInstansi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="Alamat Instansi"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/edLampiran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="Lampiran"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/edPerihal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bgedlogin"
                        android:fontFamily="@font/tcm"
                        android:hint="Perihal"
                        android:padding="8dp"
                        android:textColor="#696969"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/edket"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bgedlogin"
                        android:ems="10"
                        android:fontFamily="@font/tcm"
                        android:hint="Deskripsi"
                        android:inputType="textMultiLine"
                        android:padding="10dp" />


                    <Button
                        android:id="@+id/simpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bgbtn"
                        android:fontFamily="@font/tcm"
                        android:text="Simpan"
                        android:textColor="#ffff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>