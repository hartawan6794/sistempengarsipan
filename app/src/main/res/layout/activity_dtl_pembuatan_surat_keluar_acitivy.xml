<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    android:orientation="vertical"
    tools:context=".Activity.DtlPembuatanSuratKeluarAcitivy">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bgdetail"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tcm"
                android:text="menunggu pembuatan surat"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/tcm"
                android:text="Pengaju Surat"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/tcm"
                android:text="Nomor Arsip"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvNoDokumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/tcm"
                android:text="Lampiran"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvLampiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/tcm"
                android:text="Perihal"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvPerihal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/edStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:text="Tanggal Masuk"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvTgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:text="Instansi"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvInstansi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:text="Alamat Instansi"
                android:textColor="@android:color/black"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/tvAlamatInstansi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:text="Deskripsi"
                android:textColor="@android:color/black"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:textColor="@android:color/black"/>


            <LinearLayout
                android:id="@+id/line3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/tcm"
                    android:text="Keterangan dari Sekertaris / Direktur"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            <TextView
                android:id="@+id/tvKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textColor="@android:color/black"
                android:textSize="24dp" />
        </LinearLayout>

            <TextView
                android:id="@+id/tvUri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textSize="24dp"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

<!--            <EditText-->
<!--                android:id="@+id/edKeterangan"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="120dp"-->
<!--                android:background="@drawable/bgedlogin"-->
<!--                android:ems="10"-->
<!--                android:fontFamily="@font/tcm"-->
<!--                android:hint="Ketik disini untuk menambahkan keterangan\nKosongkan Jika Disetujui"-->
<!--                android:inputType="textMultiLine"-->
<!--                android:padding="10dp" />-->

            <TextView
                android:id="@+id/tittleUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tcm"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="Upload file yang telah disetujui disini"/>



            <LinearLayout
                android:id="@+id/line1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uploadfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tcm"
                    android:text="Upload Arsip" />

                <TextView
                    android:id="@+id/namafile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tcm"
                    android:text="Nama file" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.91" />

                <TextView
                    android:id="@+id/proses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tcm"
                    android:text="0%" />
            </LinearLayout>

            <TextView
                android:id="@+id/uri1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <TextView
                android:id="@+id/sttsUpload"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/downloadSurat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Surat"
                android:background="@drawable/bgbtn"
                android:textAllCaps="false"
                android:fontFamily="@font/tcm"
                android:onClick="download"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btnketerangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Keterangan"
                android:background="@drawable/bgbtn"
                android:textAllCaps="false"
                android:fontFamily="@font/tcm"
                android:onClick="keterangan"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/simpan"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:background="@drawable/bgbtn"
                android:textAllCaps="false"
                android:fontFamily="@font/tcm"
                android:onClick="simpan"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>